<ContentDialog
    x:Class="BcTool.UWP.Dialogs.ProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMinWidth">170</x:Double>
        <x:Double x:Key="ContentDialogMaxWidth">170</x:Double>
        <x:Double x:Key="ContentDialogMinHeight">150</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">150</x:Double>
    </ContentDialog.Resources>

    <Grid>
        <ProgressRing
            x:Name="progress"
            Width="50"
            Height="50"
            VerticalAlignment="Top"
            IsActive="True" />
        <TextBlock
            x:Name="txbContent"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="16"
            Foreground="White" />
    </Grid>

</ContentDialog>
